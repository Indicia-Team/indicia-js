{
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb/base", "prettier"],
  "rules": {
    "no-console": 0,
    "linebreak-style": 0,
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "prefer-rest-params": 0,
    "space-before-function-paren": 0,
    "arrow-parens": 0,
    "func-names": 0,
    "no-unused-expressions": [
      2,
      {
        "allowShortCircuit": true, // eg. a || a()
        "allowTernary": true // eg. a ? b() : c()
      }
    ]
  },
  "globals": {
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true,
    "describe": true,
    "it": true,
    "expect": true,
    "sinon": true,

    "parseInt": true
  }
}
