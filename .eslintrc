{
  "env": {
    "browser": true
  },
  "extends": "airbnb/base",
  "rules": {
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "prefer-rest-params": 0,
    "no-unused-expressions": [2, {
      "allowShortCircuit": true, // eg. a || a()
      "allowTernary": true // eg. a ? b() : c()
    }]
  },
  "globals": {
    "before": true,
    "beforeEach": true,
    "after": true,
    "afterEach": true,
    "describe": true,
    "it": true,
    "expect": true,
    "sinon": true,

    "parseInt": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.config.js"
      }
    }
  }
}